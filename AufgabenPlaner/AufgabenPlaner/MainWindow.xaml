<Window x:Class="AufgabenPlaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AufgabenPlaner"
        mc:Ignorable="d"
        Title="Aufgaben Planer" Height="450" Width="800" MaxHeight="450" MaxWidth="800" WindowStyle="ToolWindow"
        Loaded="Window_Loaded">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Menu-Buttons -->
        <Button Name="btn_todos" Tag="todos" Click="MainButtons_Click" Grid.Row="0" Grid.RowSpan="3" FontSize="20" FontWeight="Bold">Aufgaben</Button>
        <Button Name="btn_newTodo" Tag="newTodo" Click="MainButtons_Click" Grid.Row="3" Grid.RowSpan="3" FontSize="20" FontWeight="Bold">Neue Aufgabe</Button>
        <Button Name="btn_end" Tag="end" Click="MainButtons_Click" Grid.Row="6" Grid.RowSpan="3" FontSize="20" FontWeight="Bold">Beenden</Button>

        <!-- Oberes Label / Hauptüberschrift -->
        <Label Name="lbl_headline" Grid.Column="1" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" VerticalAlignment="Stretch" FontSize="20" FontWeight="Bold" Background="Silver">Aufgaben</Label>
        
        <!-- Hauptanzeige -->
        <!-- Aufgaben -->
        <DataGrid Name="dg_todos" FontSize="16" RowHeight="60" FontWeight="Bold" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="7" ScrollViewer.VerticalScrollBarVisibility="Visible"  AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Auswahl" Binding="{Binding IsSelected}">
                    <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="CheckBox">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                            <Setter Property="LayoutTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.25" ScaleY="1.25"/>
                                </Setter.Value>

                            </Setter>
                        </Style>
                    </DataGridCheckBoxColumn.ElementStyle>
                </DataGridCheckBoxColumn>
                <DataGridTextColumn Header="Titel" IsReadOnly="True" Binding="{Binding Title}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Padding" Value="10"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Bemerkung" IsReadOnly="True" Binding="{Binding Description}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Padding" Value="10"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Priorität" IsReadOnly="True" Binding="{Binding Priority}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Padding" Value="10"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Datum" IsReadOnly="True" Binding="{Binding Date, StringFormat=\{0:dd.MM.yyyy\}}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="Padding" Value="10"></Setter>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{Binding RowColor}"></Setter>
                    <Setter Property="FontWeight" Value="Normal"></Setter>
                </Style>
            </DataGrid.RowStyle>
            

        </DataGrid>
        <!-- Untere Leiste / Aufgaben -->
        <Label Name="lbl_todos_Buttons" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Background="Silver">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Padding="5" FontSize="14">Löschen</Button>
                <Button Padding="5" FontSize="14">Erledigt</Button>
            </StackPanel>
        </Label>
        <!-- Neue Aufgabe -->
        <StackPanel Name="stack_newTodo" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="7" Margin="50,0" VerticalAlignment="Center">
            <Label FontSize="18" FontWeight="Bold">Titel</Label>
            <TextBox Name="tbx_newTodo_title" FontSize="16" Margin="5"></TextBox>
            <Label FontSize="18" FontWeight="Bold">Bemerkung</Label>
            <TextBox Name="tbx_newTodo_description" FontSize="16" Margin="5"></TextBox>
            <Label FontSize="18" FontWeight="Bold">Datum der Aufgabe</Label>
            <DatePicker Name="dp_newTodo_datePicker" SelectedDate="{Binding Date, Mode=TwoWay}" FontSize="16" Margin="5"></DatePicker>
            <Label FontSize="18" FontWeight="Bold">Priorität</Label>
            <StackPanel Orientation="Horizontal" Margin="5">
                <RadioButton Name="rb_newToDo_Green" Tag="Niedrig"  IsChecked="True" VerticalAlignment="Center"></RadioButton>
                <Label Margin="5,0" FontSize="16" Background="Green" FontWeight="Bold" Padding="5">Niedrig</Label>
                <RadioButton Name="rb_newToDo_Orange" Tag="Mittel" VerticalAlignment="Center"></RadioButton>
                <Label Margin="5,0" FontSize="16" Background="Orange" FontWeight="Bold" Padding="5">Mittel</Label>
                <RadioButton Name="rb_newToDo_Red" Tag="Hoch" VerticalAlignment="Center"></RadioButton>
                <Label Margin="5,0" FontSize="16" Background="Red" FontWeight="Bold" Padding="5">Hoch</Label>
            </StackPanel>
        </StackPanel>
        <!-- Untere Leiste / Neue Aufgabe -->
        <Label Name="lbl_newTodo_Buttons" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Background="Silver">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btn_newTodo_Clear" Tag="clear" Click="Btn_NewTodo_Click"  Padding="5" FontSize="14">Felder Leeren</Button>
                <Button Name="btn_new_Todo_Save" Tag="save" Click="Btn_NewTodo_Click" Padding="5" FontSize="14">Speichern</Button>
            </StackPanel>
        </Label>
    </Grid>
</Window>
